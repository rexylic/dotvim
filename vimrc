filetype plugin indent on
syntax enable

let g:mapleader = "\ "
let g:maplocalleader = ","
let g:no_plugin_maps = 1

nnoremap ` zt
nnoremap Q @@
nnoremap U :redo<CR>

set autoindent
set breakindent
set colorcolumn=81,101,121,141
set nocompatible
set foldmethod=marker
set iskeyword=a-z,A-Z,48-57
set incsearch
set linebreak
set ruler
set shell=/bin/zsh\ -l
set showbreak=\ \ 
set smartcase
set smartindent
set smoothscroll
set shiftwidth=0
set noswapfile
set tabstop=4
set textwidth=80
set timeoutlen=200
set ttimeoutlen=100
set wildmenu
set wrap

